<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.baker.bddivision.MainActivity"
    android:background="#40b09c">

    <Button
        android:text="Khulna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_launcher2"
        android:textSize="30sp"
        android:layout_marginTop="5dp"
        android:background="@drawable/round_corner_button"
        android:id="@+id/btnKhulna"
        android:layout_below="@+id/btnBarisal"
        android:layout_alignLeft="@+id/btnBarisal"
        android:layout_alignStart="@+id/btnBarisal"
        android:textColor="#b017ed"/>

    <Button
        android:text="Sylhet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_launcher2"
        android:textSize="30sp"
        android:layout_marginTop="5dp"
        android:background="@drawable/round_corner_button"
        android:id="@+id/btnSylhet"
        android:layout_below="@+id/btnKhulna"
        android:layout_alignLeft="@+id/btnKhulna"
        android:layout_alignStart="@+id/btnKhulna"
        android:textColor="#b017ed" />

    <Button
        android:text="Rajshahi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_launcher2"
        android:textSize="30sp"
        android:layout_marginTop="5dp"
        android:background="@drawable/round_corner_button"
        android:id="@+id/btnRajshahi"
        android:layout_below="@+id/btnSylhet"
        android:layout_alignLeft="@+id/btnSylhet"
        android:layout_alignStart="@+id/btnSylhet"
        android:textColor="#b017ed"/>

    <Button
        android:text="Rangpur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_launcher2"
        android:textSize="30sp"
        android:layout_marginTop="5dp"
        android:background="@drawable/round_corner_button"
        android:id="@+id/btnRangpur"
        android:layout_below="@+id/btnRajshahi"
        android:layout_alignLeft="@+id/btnRajshahi"
        android:layout_alignStart="@+id/btnRajshahi"
        android:textColor="#b017ed"/>

    <Button
        android:text="Barisal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_launcher2"
        android:textSize="30sp"
        android:layout_marginTop="5dp"
        android:background="@drawable/round_corner_button"
        android:id="@+id/btnBarisal"
        android:layout_below="@+id/btnChittagong"
        android:layout_alignLeft="@+id/btnChittagong"
        android:layout_alignStart="@+id/btnChittagong"
        android:textColor="#b017ed"/>

    <Button
        android:text="Chittagong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_launcher2"
        android:textSize="30sp"
        android:layout_marginTop="5dp"
        android:background="@drawable/round_corner_button"
        android:id="@+id/btnChittagong"
        android:layout_alignLeft="@+id/btnDhaka"
        android:layout_alignStart="@+id/btnDhaka"
        android:layout_below="@+id/btnDhaka"
        android:textColor="#b017ed"/>

    <Button
        android:text="Mymensingh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_launcher2"
        android:textSize="30sp"
        android:layout_marginTop="5dp"
        android:background="@drawable/round_corner_button"
        android:layout_below="@+id/btnRangpur"
        android:layout_alignLeft="@+id/btnRangpur"
        android:layout_alignStart="@+id/btnRangpur"
        android:id="@+id/btnMymensingh"
        android:textColor="#b017ed"/>

    <Button
        android:text="Dhaka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_launcher2"
        android:textSize="30sp"
        android:background="@drawable/round_corner_button"
        android:id="@+id/btnDhaka"
        android:textColor="#b017ed"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
